#:import DefaultButton ui.widgets.default_button

<DecoderScreen>

    MDCard:
        id: decode_card
        padding: dp(24)
        spacing: dp(24)
        orientation: 'vertical'
        size_hint: 0.85, 0.7
        pos_hint: {'top': 0.85, 'center_x': 0.5}
        md_bg_color: app.theme_cls.accent_color
        elevation: 15

        MDLabel:
            id: decode_label
            text: 'Decode Morse Code Audio'
            halign: 'center'
            size_hint: 1, 0.5
            font_style: 'Body1'
            theme_text_color: 'Custom'
            text_color: 1, 1, 1, 1

        MDLabel:
            id: decode_output_label
            text: root.decode_output_label_text
            font_style: 'H5'
            halign: 'center'
            size_hint: 1, 0.5
            theme_text_color: 'Custom'
            text_color: 1, 1, 1, 1

        MDTextFieldRound:
            id: decode_input
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            font_size: 20
            normal_color: 1, 1, 1, 0.2
            size_hint: 0.85, 0.5
            icon_type: 'right'
            icon_right: 'database-export'
            icon_callback: root.clear_text
            text: root.decode_input_text


        AnchorLayout:
            anchor_x:'center'
            anchor_y:'bottom'
            padding: dp(25)
            MDFloatingActionButton:
                id: record_button
                icon: 'record'
                size: dp(56), dp(56)
                md_bg_color: app.theme_cls.primary_color
                text_color: 1, 1, 1, 1
                on_press:  root.decode_audio()