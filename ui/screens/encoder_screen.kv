#:import DefaultButton ui.widgets.default_button

<EncoderScreen>
    MDCard:
        id: encode_card
        padding: dp(24)
        spacing: dp(24)
        orientation: 'vertical'
        size_hint: 0.85, 0.7
        pos_hint: {'top': 0.85, 'center_x': 0.5}
        md_bg_color: app.theme_cls.accent_color
        elevation: 15

        MDLabel:
            id: encode_label
            text: 'Encode Morse Code Audio'
            font_style: 'Body1'
            halign: 'center'
            size_hint: 1, 0.5
            theme_text_color: 'Custom'
            text_color: 1, 1, 1, 1

        MDLabel:
            id: encode_output_label
            text: 'Enter text to convert to morse code'
            halign: 'center'
            size_hint: 1, 0.5
            theme_text_color: 'Custom'
            text_color: 1, 1, 1, 1

        MDTextFieldRound:
            id: encode_input
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint: 0.85, 0.5
            icon_right: 'send'
            icon_left_disabled: False
            icon_left: 'close-circle'
            icon_callback: root.icon_callbacks
